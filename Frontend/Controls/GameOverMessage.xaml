<UserControl x:Class="Frontend.Controls.GameOverMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             mc:Ignorable="d"
             Background="Transparent">
    <Border
        Panel.ZIndex="2"
        Width="300" Height="300"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Background="White"
        CornerRadius="20">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.35"></DropShadowEffect>
        </Border.Effect>
        
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            
            <TextBlock
                Grid.Row="0"
                Text="Вы проиграли"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Montserrat"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Red">
            </TextBlock>
            
            
            <TextBlock
                Grid.Row="1"
                TextWrapping="Wrap"
                TextAlignment="Center"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Montserrat"
                FontSize="15"
                FontWeight="SemiBold"
                Margin="15 0"
                Foreground="Black">
                <Run>Ваши очки будут перерасчитаны после завершения игры</Run>
                <LineBreak></LineBreak>
                <LineBreak></LineBreak>
                <Run Foreground="Gray">Вы можете выйти из игры или остаться и наблюдать за игрой</Run>
            </TextBlock>
            
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="Exit"
                    Content="Выйти из игры"
                    Height="40"
                    Width="100"
                    Click="Exit_OnClick"
                    Margin="10 0">
                </Button>
                
                <Button
                    x:Name="Continue"
                    Content="Остаться"
                    Height="40"
                    Width="100"
                    Click="Continue_OnClick"
                    Margin="10 0">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
