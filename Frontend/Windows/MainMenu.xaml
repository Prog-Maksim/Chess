<Page x:Class="Frontend.Windows.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.Windows"
      xmlns:notify="clr-namespace:Frontend.Controls.Message"
      xmlns:frame="clr-namespace:Frontend.Controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      Title="MainMenu" d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid x:Name="MainGrid" ShowGridLines="False">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"></RowDefinition>
            <RowDefinition Height="0.06*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="0.47*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.47*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Viewbox
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Right"
            Margin="0 10 30 40">
            <Button
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="ButtonBase_OnClick">
                <iconPacks:PackIconFontAwesome
                    VerticalAlignment="Center"
                    Kind="BarsSolid">
                </iconPacks:PackIconFontAwesome>
            </Button>
        </Viewbox>
       
        
        <Viewbox
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Margin="0 0 0 5"
            Stretch="Uniform">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="ScoreText"
                    FontFamily="Montserrat"
                    FontSize="20"
                    Text="0"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Margin="0 0 10 0">
                </TextBlock>
                
                <iconPacks:PackIconUnicons 
                    Kind="FavoriteSolid"
                    VerticalAlignment="Center"
                    Foreground="#FFC107">
                </iconPacks:PackIconUnicons>
            </StackPanel>
        </Viewbox>
        
        <Viewbox 
            x:Name="Notify" 
            Grid.Row="0" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left">
        </Viewbox>

        <Viewbox 
            Grid.Row="0" 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Stretch="Uniform">
            <StackPanel
                Margin="0 10 0 30"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

                <Button
                    x:Name="CreateGame"
                    Width="200"
                    Height="35"
                    Style="{StaticResource ClickButtonStyle}"
                    Content="Создать игру"
                    Background="#7074D5"
                    Click="CreateGame_OnClick"
                    Margin="0 0 10 0">
                </Button>

                <Button
                    x:Name="JoinTheGame"
                    Width="200"
                    Height="35"
                    Style="{StaticResource ClickButtonStyle}"
                    Background="#7074D5"
                    Click="JoinTheGame_OnClick"
                    Content="Присоединиться">
                </Button>
            </StackPanel>
        </Viewbox>

        <Grid 
            Grid.Row="2" 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.47*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="0.47*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="0.30*"></RowDefinition>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Background="#E0E0E0"
                    Margin="20 0 20 0"
                    CornerRadius="15">
                </Border>

                <frame:ChestControl x:Name="ChestControl" Grid.Row="1"/>
            </Grid>

            <Grid Grid.Column="1" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Margin="20 0 20 20"
                    CornerRadius="15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="3"
                    Background="Transparent">
                </Border>

                <Grid Grid.Row="1" ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="0.1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Viewbox Grid.Column="0">
                        <Image
                            Cursor="Hand"
                            Source="../Image/Arrow/Left.png"
                            Margin="50 0">
                        </Image>
                    </Viewbox>
                    
                    <Viewbox Grid.Column="1">
                        <TextBlock
                            Text="Король"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            FontSize="25"
                            Margin="0 10 0 200"
                            FontWeight="Bold">
                        </TextBlock>
                    </Viewbox>
                    
                    <StackPanel 
                        Grid.Column="1"
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                        
                        <Viewbox Stretch="Uniform">
                            <Image
                                Margin="0 270"
                                Source="../Image/image 1.png">
                            </Image>
                        </Viewbox>
                        
                        <Viewbox Stretch="Uniform">
                            <Image
                                Margin="60 150"
                                Source="../Image/image 1.png">
                            </Image>
                        </Viewbox>
                        
                        <Viewbox Stretch="Uniform">
                            <Image
                                Margin="0 270"
                                Source="../Image/image 1.png">
                            </Image>
                        </Viewbox>
                        
                    </StackPanel>

                    <Viewbox Grid.Column="2">
                        <Image
                            Cursor="Hand"
                            Source="../Image/Arrow/Right.png"
                            Margin="50 0">
                        </Image>
                    </Viewbox>
                </Grid>
            </Grid>

            <Grid Grid.Column="2" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="0.30*"></RowDefinition>
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Background="#E0E0E0"
                    Margin="20 0 20 0"
                    CornerRadius="15">
                    <Grid ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <TextBlock
                            x:Name="LeagueText"
                            Grid.Row="0"
                            Text="Перечник"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            FontSize="25"
                            Margin="0 10 0 0"
                            FontWeight="Bold">
                        </TextBlock>
                        
                        <TextBlock
                            x:Name="LevelText"
                            Grid.Row="1"
                            Foreground="#7074D5"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Margin="0 0 0 10"
                            FontWeight="SemiBold">
                            <Run>Уровень: </Run>
                            <Run>5</Run>
                        </TextBlock>
                        
                        <Border Grid.Row="2" Padding="10 0">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <StackPanel x:Name="PotionStackPanel">
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>

                <Border
                    Grid.Row="1"
                    Background="#7074D5"
                    Margin="20"
                    CornerRadius="15">
                    <Viewbox Stretch="Uniform">
                        <TextBlock
                            Text="В БОЙ!"
                            Margin="30"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="30">
                        </TextBlock>
                    </Viewbox>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>