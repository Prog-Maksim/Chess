<Page x:Class="Frontend.Windows.Game.GameMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.Windows.Game"
      xmlns:frame="clr-namespace:Frontend.Controls"
      mc:Ignorable="d"
      Title="GameMenu" d:DesignHeight="700" d:DesignWidth="1300">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="270"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border
            x:Name="ProcessingGame"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Panel.ZIndex="3"
            Background="White">
            <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                FontFamily="Montserrat"
                FontSize="30"
                FontWeight="Bold">
                <Run>Идет загрузка карты</Run>
                <LineBreak/>
                <Run Foreground="Gray">Ожидайте...</Run>
            </TextBlock>
        </Border>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            x:Name="ReverseTime"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Panel.ZIndex="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontFamily="Montserrat"
            FontSize="30"
            FontWeight="Bold"
            TextAlignment="Center"
            Visibility="Hidden">
            <Run Text="До начала игры осталось:"/>
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            <Run x:Name="ReverTimeText" FontSize="50" Text="5"></Run>
        </TextBlock>

        <!-- Верхнее меню -->
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Background="#E0E0E0"
            CornerRadius="10"
            Height="40"
            Margin="120 0"
            VerticalAlignment="Bottom">
            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="GameName"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Black"
                    FontFamily="Montserrat"
                    FontSize="17"
                    Margin="20 0 0 0">
                </TextBlock>

                <TextBlock
                    x:Name="GameTime"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Black"
                    FontFamily="Montserrat"
                    FontSize="17"
                    Text="00:00:00">
                </TextBlock>

                <Border
                    x:Name="LeaveGame"
                    Grid.Column="2"
                    Background="#BEBEBE"
                    Margin="5"
                    Width="120"
                    Cursor="Hand"
                    MouseLeftButtonDown="LeaveGame_OnMouseLeftButtonDown"
                    HorizontalAlignment="Right"
                    CornerRadius="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Red"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Text="Выход">
                    </TextBlock>
                </Border>
            </Grid>
        </Border>

        <!-- Боковое меню (левое) -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="0 30">
                <StackPanel
                    x:Name="StackPanelPlayer">

                    <Border
                        Background="#E0E0E0"
                        Margin="10 0"
                        CornerRadius="10">
                        <StackPanel>
                            <TextBlock
                                Text="Игроки"
                                HorizontalAlignment="Center"
                                FontFamily="Montserrat"
                                FontWeight="Bold"
                                FontSize="20"
                                Margin="0 10">
                            </TextBlock>

                            <DataGrid
                                x:Name="PlayerDataGrid"
                                Margin="5"
                                VerticalScrollBarVisibility="Hidden">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header=" " IsReadOnly="True" CanUserResize="False" Width="auto"
                                                        Binding="{Binding Number}">
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Статус" IsReadOnly="True" CanUserResize="False"
                                                        Width="auto"
                                                        Binding="{Binding Number}">
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Никнейм" IsReadOnly="True" CanUserResize="False" Width="*"
                                                        Binding="{Binding Number}">
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Header="Здоровье" IsReadOnly="True" CanUserResize="False"
                                                        Width="auto"
                                                        Binding="{Binding Number}">
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <StackPanel
                    x:Name="OfflinePlayers"
                    Margin="0 10">

                </StackPanel>
        </StackPanel>

        <!-- Шахматное поле -->
        <Viewbox Grid.Row="1" Grid.Column="1">
            <Grid x:Name="ChessBoardGrid" ShowGridLines="False" Width="400" Height="400" Margin="20">

                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Viewbox>

        <StackPanel
            x:Name="RightStackPanel"
            Grid.Column="2"
            Grid.Row="1"
            Margin="0 30">
        </StackPanel>
    </Grid>
</Page>