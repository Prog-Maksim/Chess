<UserControl x:Class="Frontend.Controls.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="350">
    <Viewbox>
        <Border
        Background="White"
        CornerRadius="20"
        Width="250" Height="400"
        Padding="20 20">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.35"></DropShadowEffect>
        </Border.Effect>

        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Настройки"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="Black"
                FontFamily="Montserrat"
                FontSize="20"
                Margin="0 0 0 20"
                FontWeight="Bold">
            </TextBlock>
            
            <Button
                x:Name="Close"
                Grid.Row="0"
                Cursor="Hand"
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 0 20"
                Click="Close_OnClick">
                <iconPacks:PackIconEvaIcons 
                    Kind="Close"
                    Width="20"
                    Height="20"
                    Foreground="Red">
                </iconPacks:PackIconEvaIcons>
            </Button>

            <StackPanel
                Grid.Row="1"
                Margin="0 10">
                
                <Button
                    x:Name="UpdatePassword"
                    Margin="0 10"
                    Background="#7074D5"
                    Foreground="White"
                    Style="{StaticResource ClickButtonStyle}"
                    Content="Сменить пароль"
                    Click="UpdatePassword_OnClick"
                    Height="40">
                </Button>
                
                <Button
                    x:Name="DeleteAccount"
                    Margin="0 10"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="Red"
                    Content="Удалить аккаунт"
                    Foreground="Red"
                    Style="{StaticResource ClickButtonStyle}"
                    Click="DeleteAccount_OnClick"
                    Height="40">
                </Button>
                
            </StackPanel>
            
            <Button
                x:Name="Exit"
                Grid.Row="2"
                Background="Transparent"
                Content="выйти"
                Foreground="Red"
                VerticalAlignment="Bottom"
                Style="{StaticResource ClickButtonStyle}"
                Click="Exit_OnClick"
                Height="40">
            </Button>
        </Grid>
    </Border>
    </Viewbox>
</UserControl>
