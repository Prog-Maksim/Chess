<Page x:Class="Frontend.Windows.Game.GameMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.Windows.Game"
      xmlns:frame="clr-namespace:Frontend.Controls"
      mc:Ignorable="d"
      Title="GameMenu" d:DesignHeight="700" d:DesignWidth="1300">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="270"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Верхнее меню -->
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Background="#E0E0E0"
            CornerRadius="10"
            Height="40"
            Margin="120 0"
            VerticalAlignment="Bottom">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition MaxWidth="180"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Black"
                    FontFamily="Montserrat"
                    FontSize="17"
                    Text="Игра 2x2"
                    Margin="20 0 0 0">
                </TextBlock>
                
                <TextBlock
                    x:Name="GameTime"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Black"
                    FontFamily="Montserrat"
                    FontSize="17"
                    Text="10:05">
                </TextBlock>
                
                <Border
                    Grid.Column="2"
                    Background="#BEBEBE"
                    Margin="5"
                    CornerRadius="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Red"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Text="Закончить">
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
        
        <!-- Боковое меню (левое) -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="0 30">
            
            <Border
                Background="#E0E0E0"
                Margin="10 0"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Text="Игроки"
                        HorizontalAlignment="Center"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        FontSize="20"
                        Margin="0 10">
                    </TextBlock>
                    
                    <DataGrid
                        x:Name="PlayerDataGrid"
                        Margin="5"
                        VerticalScrollBarVisibility="Hidden">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header=" " IsReadOnly="True" CanUserResize="False" Width="auto"
                                                Binding="{Binding Number}">
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Статус" IsReadOnly="True" CanUserResize="False" Width="auto"
                                                Binding="{Binding Number}">
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Никнейм" IsReadOnly="True" CanUserResize="False" Width="*"
                                                Binding="{Binding Number}">
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Здоровье" IsReadOnly="True" CanUserResize="False" Width="auto"
                                                Binding="{Binding Number}">
                            </DataGridTextColumn>
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
            <frame:PlayerTimeMenu/>
            <frame:PlayerTimeMenu/>
            
        </StackPanel>
        
        <!-- Шахматное поле -->
        <Viewbox  Grid.Row="1" Grid.Column="1">
            <Grid x:Name="ChessBoardGrid" ShowGridLines="False" Width="400" Height="400" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
