<UserControl x:Class="Frontend.Controls.UpdatePassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border
        Background="White"
        CornerRadius="20"
        Padding="10">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.35"></DropShadowEffect>
        </Border.Effect>
        
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <Button
                x:Name="Close"
                Grid.Row="0"
                Cursor="Hand"
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 0 20">
                <iconPacks:PackIconEvaIcons 
                    Kind="Close"
                    Width="20"
                    Height="20"
                    Foreground="Red">
                </iconPacks:PackIconEvaIcons>
            </Button>
            
            <TextBlock
                Grid.Row="0"
                Text="Обновить пароль"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Montserrat"
                FontSize="20"
                FontWeight="Bold"
                Margin="0 0 0 20">
            </TextBlock>
            
            <TextBox
                x:Name="OldPassword"
                Grid.Row="1"
                Style="{StaticResource TextBoxStyle}"
                Tag="Старый пароль: ">
            </TextBox>
            
            <TextBox
                x:Name="NewPassword"
                Grid.Row="2"
                Style="{StaticResource TextBoxStyle}"
                Tag="Новый пароль: ">
            </TextBox>
            
            <Button
                Grid.Row="3"
                VerticalAlignment="Bottom"
                Content="Изменить"
                Height="35"
                Background="#7074D5"
                Click="ButtonBase_OnClick"
                Style="{StaticResource ClickButtonStyle}">
            </Button>
        </Grid>
    </Border>
</UserControl>
