<UserControl x:Class="Frontend.Controls.CreateGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             Background="Transparent"
             Height="400" Width="300">
    <Border
        Background="White"
        CornerRadius="20" Padding="10 0 10 10">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.35"></DropShadowEffect>
        </Border.Effect>

        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <iconPacks:PackIconEvaIcons 
                Grid.Row="0"
                Kind="Close"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Width="20"
                Height="20"
                Cursor="Hand"
                Foreground="Red"
                MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
            </iconPacks:PackIconEvaIcons>
           
            <TextBlock
                Grid.Row="1"
                x:Name="ErrorText"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                FontFamily="Montserrat"
                FontSize="13"
                Foreground="Red"
                FontWeight="SemiBold">
            </TextBlock>
            
            <TextBlock
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Montserrat"
                FontSize="20"
                FontWeight="Bold"
                Margin="0 20 0 20"
                Text="Создать игру">
            </TextBlock>
            
            <TextBox
                x:Name="NameGame"
                Grid.Row="2"
                Tag="Название"
                HorizontalAlignment="Stretch"
                Style="{StaticResource TextBoxStyle}"
                Margin="0 10">
            </TextBox>
            
            <Grid Grid.Row="3"  Margin="0 3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    FontFamily="Montserrat"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0 10"
                    Text="Игроков: ">
                </TextBlock>
            
                <ToggleButton 
                    x:Name="ToggleButton"
                    Grid.Column="1"
                    IsChecked="False"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ToggleButton}">
                </ToggleButton>
            </Grid>
            
            <Grid Grid.Row="4"  Margin="0 3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    FontFamily="Montserrat"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0 10"
                    Text="Приватная игра: ">
                </TextBlock>
            
                <CheckBox
                    x:Name="CheckBox"
                    Grid.Column="1"
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Right"
                    Style="{StaticResource CheckBoxStyle}">
                </CheckBox>
            </Grid>
            
            <Button
                x:Name="Click"
                Grid.Row="5"
                Height="50"
                Background="#7074D5"
                VerticalAlignment="Bottom"
                Style="{StaticResource ClickButtonStyle}"
                Content="Создать"
                Click="Click_OnClick">
            </Button>
        </Grid>
        
    </Border>
</UserControl>
