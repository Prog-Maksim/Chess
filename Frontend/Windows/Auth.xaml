<Page x:Class="Frontend.Windows.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.Windows"
      xmlns:frame="clr-namespace:Frontend.Controls"
      mc:Ignorable="d"
      Title="Auth" d:DesignHeight="700" d:DesignWidth="1300">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" MinWidth="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Border
            Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush 
                    StartPoint="0.2, 0" 
                    EndPoint="0.9, 1">
                    <GradientStop Color="#DD4CEE" Offset="0"/>
                    <GradientStop  Color="#7074D5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Image
                Source="../Image/image 1.png"
                Stretch="Uniform"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="100,0">
            </Image>
        </Border>
        
        
        <TextBlock Grid.Column="1" 
                   Text="Добро пожаловать в Chess" 
                   HorizontalAlignment="Center" 
                   Margin="0 20 0 0"
                   FontFamily="Montserrat"
                   FontSize="30"
                   FontWeight="Bold">
        </TextBlock>

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="MainTextBlock"
                Text="Регистрация"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0 0 0 20"
                FontFamily="Montserrat"
                FontSize="30"
                FontWeight="SemiBold">
            </TextBlock>
            
            <TextBlock
                x:Name="ErrorTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0 0 0 15"
                Foreground="Red"
                FontFamily="Montserrat"
                FontSize="20"
                TextWrapping="Wrap"
                MaxWidth="500"
                FontWeight="SemiBold">
            </TextBlock>
        
            <StackPanel x:Name="TextBoxList">
            </StackPanel>
            
            <TextBlock
                x:Name="ChoiseText"
                HorizontalAlignment="Right"
                TextDecorations="Underline"
                Text="уже есть аккаунт?"
                FontFamily="Montserrat"
                FontSize="13"
                FontWeight="SemiBold"
                Cursor="Hand"
                MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown"
                Margin="0 0 0 50">
            </TextBlock>
            
            <Button
                x:Name="AuthButton"
                Width="300"
                Height="40"
                Content="Зарегистрироваться"
                Click="AuthButton_OnClick"
                Style="{StaticResource AuthButtonStyle}">
            </Button>
        </StackPanel>
            
    </Grid>
</Page>
