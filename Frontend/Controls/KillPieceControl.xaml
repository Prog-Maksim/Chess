<UserControl x:Class="Frontend.Controls.KillPieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="350">
    <Border
        x:Name="MainBorder"
        Height="40"
        Background="#E0E0E0"
        Margin="10 0 10 10"
        CornerRadius="10">
        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <TextBlock
                Grid.Column="0"
                Text="Повержено:"
                VerticalAlignment="Center"
                Margin="10 0 10 0"
                FontSize="15"
                FontWeight="Bold">
            </TextBlock>
            
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 8 0">
                <Image
                    Source="../Image/Piece/King.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="KingText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
            
            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 8 0">
                <Image
                    Source="../Image/Piece/Queen.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="QueenText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
            
            <StackPanel
                Grid.Column="3"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 8 0">
                <Image
                    Source="../Image/Piece/Rook.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="RookText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
            
            <StackPanel
                Grid.Column="4"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 8 0">
                <Image
                    Source="../Image/Piece/Knight.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="KnightText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
            
            <StackPanel
                Grid.Column="5"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 8 0">
                <Image
                    Source="../Image/Piece/Bishop.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="BishopText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
            
            <StackPanel
                Grid.Column="6"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="0 0 0 0">
                <Image
                    Source="../Image/Piece/Pawn.png"
                    Height="20">
                </Image>
                <TextBlock
                    x:Name="PawnText"
                    Text="0"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Margin="3 0 0 0"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center">
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
