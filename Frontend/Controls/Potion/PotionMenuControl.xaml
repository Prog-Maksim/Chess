<UserControl x:Class="Frontend.Controls.Potion.PotionMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Frontend.Controls"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="75" d:DesignWidth="350">
    <Border
        CornerRadius="10"
        Background="#E0E0E0"
        Margin="10 0 10 10"
        Padding="5 7 5 7">
        
        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Border
                x:Name="Border1"
                Grid.Column="0"
                CornerRadius="10"
                Width="55"
                Cursor="Hand"
                Background="#B8B5B5">
                <Image
                    x:Name="Image1"
                    Margin="10">
                </Image>
            </Border>
            
            <Border
                x:Name="Border2"
                Grid.Column="1"
                CornerRadius="10"
                Width="55"
                Cursor="Hand"
                Background="#B8B5B5">
                <Image
                    x:Name="Image2"
                    Margin="10">
                </Image>
            </Border>
            
            <Border
                x:Name="Border3"
                Grid.Column="2"
                CornerRadius="10"
                Width="55"
                Cursor="Hand"
                Background="#B8B5B5">
                <Image
                    x:Name="Image3"
                    Margin="10">
                </Image>
            </Border>
            
            <Border
                x:Name="Border4"
                Grid.Column="3"
                CornerRadius="10"
                Width="55"
                Cursor="Hand"
                Background="#B8B5B5">
                <Image
                    x:Name="Image4"
                    Margin="10">
                </Image>
            </Border>
            
            <Border
                x:Name="Border5"
                Grid.Column="4"
                CornerRadius="10"
                Width="55"
                Cursor="Hand"
                Background="#B8B5B5">
                <Image
                    x:Name="Image5"
                    Margin="10">
                </Image>
            </Border>
        </Grid>
        
    </Border>
    
</UserControl>
